@page "/documents/upload"
@using DocumentApprovalSystem.Services
@using DocumentApprovalSystem.Models
@using Microsoft.AspNetCore.Authorization
@using System.Security.Claims
@inject IDocumentService DocumentService
@inject NavigationManager NavigationManager
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject ILogger<UploadDocument> Logger
@attribute [Authorize(Roles = "Administrador,Solicitante,Aprobador")]
@rendermode InteractiveServer

<PageTitle>Nueva Solicitud | Sistema de Aprobación</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold mb-1">Nueva Solicitud de Documento</h2>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a href="/" class="text-decoration-none">Inicio</a></li>
                <li class="breadcrumb-item"><a href="documents" class="text-decoration-none">Expedientes</a></li>
                <li class="breadcrumb-item active" aria-current="page">Subir</li>
            </ol>
        </nav>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-12 col-lg-8">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white py-3">
                <h5 class="mb-0">Formulario de Solicitud</h5>
            </div>
            <div class="card-body p-4">
                <EditForm Model="@documentModel" OnValidSubmit="HandleValidSubmit" OnInvalidSubmit="HandleInvalidSubmit" FormName="UploadForm">
                    <DataAnnotationsValidator />
                    <ValidationSummary class="text-danger mb-3" />
                    
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Título del Documento</label>
                        <InputText class="form-control" @bind-Value="documentModel.Title" placeholder="ej. Informe Financiero T3" />
                        <ValidationMessage For="@(() => documentModel.Title)" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Descripción</label>
                        <InputTextArea class="form-control" @bind-Value="documentModel.Description" rows="3" placeholder="Describe brevemente el propósito de este documento..." />
                        <ValidationMessage For="@(() => documentModel.Description)" />
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-semibold">Adjunto</label>
                        <div class="border rounded p-4 text-center bg-light dashed-border">
                            <i class="bi bi-cloud-arrow-up fs-1 text-muted mb-2"></i>
                            <p class="mb-2">Arrastra y suelta tu archivo aquí o haz clic para buscar</p>
                            <InputFile OnChange="HandleFileSelection" class="form-control w-auto mx-auto" />
                            @if (selectedFile != null)
                            {
                                <div class="mt-3 d-inline-flex align-items-center bg-white border rounded px-3 py-2">
                                    <i class="bi bi-file-earmark-check text-success me-2"></i>
                                    <span class="small fw-semibold">@selectedFile.Name</span>
                                    <span class="small text-muted ms-2">(@(selectedFile.Size / 1024) KB)</span>
                                </div>
                            }
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger mb-3">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i> @errorMessage
                        </div>
                    }

                    <!-- Debug Info (Temporary) -->


                    <div class="d-flex justify-content-end gap-2">
                        <a href="documents" class="btn btn-light">Cancelar</a>
                        <button type="submit" class="btn btn-primary px-4" disabled="@isSubmitting">
                            @if (isSubmitting)
                            {
                                <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                <span>Enviando...</span>
                            }
                            else
                            {
                                <span><i class="bi bi-check-lg me-2"></i> Enviar Solicitud</span>
                            }
                        </button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
</div>

<style>
    .dashed-border {
        border-style: dashed !important;
        border-width: 2px !important;
    }
</style>

@code {
    private DocumentRequest documentModel = new();
    private IBrowserFile? selectedFile;
    private bool isSubmitting = false;
    private string currentUserId = "";
    private string errorMessage = "";

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        if (user.Identity?.IsAuthenticated == true)
        {
            var userIdClaim = user.FindFirst(ClaimTypes.NameIdentifier);
            currentUserId = userIdClaim?.Value ?? "";
            documentModel.RequestedByUserId = currentUserId;
            Logger.LogInformation($"Initialized with User ID: {currentUserId}");
        }
        else
        {
            Logger.LogWarning("User is not authenticated or ID claim is missing.");
        }
    }

    private void HandleFileSelection(InputFileChangeEventArgs e)
    {
        selectedFile = e.File;
        errorMessage = ""; // Clear error on file selection
        Logger.LogInformation($"File selected: {selectedFile.Name}");
    }

    private void HandleInvalidSubmit()
    {
        errorMessage = "Por favor, corrija los errores en el formulario antes de enviar.";
        Logger.LogWarning("Invalid submit attempt.");
    }

    private async Task HandleValidSubmit()
    {
        Logger.LogInformation("Valid submit started.");
        isSubmitting = true;
        errorMessage = "";
        
        try
        {
            // Simulate upload delay
            await Task.Delay(500); // Reduced delay

            documentModel.CreatedDate = DateTime.Now;
            documentModel.Status = "Pending";
            documentModel.RequestedByUserId = currentUserId;
            
            Logger.LogInformation($"Submitting document: {documentModel.Title}, User: {documentModel.RequestedByUserId}");

            if (selectedFile != null)
            {
                // Use the method that handles file upload
                await DocumentService.CreateAsync(documentModel, selectedFile);
            }
            else
            {
                // Use the method that doesn't require a file
                await DocumentService.CreateDocumentAsync(documentModel);
            }

            Logger.LogInformation("Document created successfully.");
            NavigationManager.NavigateTo("documents");
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error submitting document.");
            errorMessage = $"Error al enviar la solicitud: {ex.Message}";
        }
        finally
        {
            isSubmitting = false;
        }
    }
}
