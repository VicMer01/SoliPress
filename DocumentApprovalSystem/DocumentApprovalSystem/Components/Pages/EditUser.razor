@page "/users/edit/{UserId}"
@using Microsoft.AspNetCore.Authorization
@using DocumentApprovalSystem.Services
@using DocumentApprovalSystem.Models.ViewModels
@inject IUserManagementService UserManagementService
@inject NavigationManager NavigationManager
@attribute [Authorize(Roles = "Administrador")]
@rendermode InteractiveServer

<PageTitle>Editar Usuario | Sistema de Aprobación</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold mb-1">Editar Usuario</h2>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a href="/" class="text-decoration-none">Inicio</a></li>
                <li class="breadcrumb-item"><a href="/users" class="text-decoration-none">Usuarios</a></li>
                <li class="breadcrumb-item active" aria-current="page">Editar</li>
            </ol>
        </nav>
    </div>
    <a href="/users" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-2"></i> Volver
    </a>
</div>

@if (model == null)
{
    <div class="text-center py-5">
        <LoadingSpinner />
    </div>
}
else
{
    <div class="row">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <EditForm Model="@model" OnValidSubmit="HandleSubmit">
                        <DataAnnotationsValidator />
                        
                        @if (!string.IsNullOrEmpty(errorMessage))
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <i class="bi bi-exclamation-triangle me-2"></i>
                                @errorMessage
                                <button type="button" class="btn-close" @onclick="() => errorMessage = string.Empty"></button>
                            </div>
                        }

                        @if (successMessage)
                        {
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                <i class="bi bi-check-circle me-2"></i>
                                Usuario actualizado exitosamente
                                <button type="button" class="btn-close" @onclick="() => successMessage = false"></button>
                            </div>
                        }

                        <h5 class="mb-3">Información Personal</h5>
                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <label class="form-label">Nombre Completo <span class="text-danger">*</span></label>
                                <InputText class="form-control" @bind-Value="model.FullName" />
                                <ValidationMessage For="@(() => model.FullName)" class="text-danger small" />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Email <span class="text-danger">*</span></label>
                                <InputText type="email" class="form-control" @bind-Value="model.Email" />
                                <ValidationMessage For="@(() => model.Email)" class="text-danger small" />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Departamento</label>
                                <InputText class="form-control" @bind-Value="model.Department" />
                                <ValidationMessage For="@(() => model.Department)" class="text-danger small" />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Rol <span class="text-danger">*</span></label>
                                <InputSelect class="form-select" @bind-Value="model.Role">
                                    @foreach (var role in availableRoles)
                                    {
                                        <option value="@role">@role</option>
                                    }
                                </InputSelect>
                                <ValidationMessage For="@(() => model.Role)" class="text-danger small" />
                            </div>
                        </div>

                        <h5 class="mb-3">Estado de la Cuenta</h5>
                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <div class="form-check form-switch">
                                    <InputCheckbox class="form-check-input" @bind-Value="model.IsActive" id="isActive" />
                                    <label class="form-check-label" for="isActive">
                                        Cuenta Activa
                                    </label>
                                </div>
                                <small class="text-muted">Si está desactivada, el usuario no podrá iniciar sesión.</small>
                            </div>

                            <div class="col-md-6">
                                <div class="form-check form-switch">
                                    <InputCheckbox class="form-check-input" @bind-Value="model.EmailConfirmed" id="emailConfirmed" />
                                    <label class="form-check-label" for="emailConfirmed">
                                        Email Verificado
                                    </label>
                                </div>
                                <small class="text-muted">Marcar si el email ha sido verificado.</small>
                            </div>
                        </div>

                        <h5 class="mb-3">Cambiar Contraseña (Opcional)</h5>
                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <label class="form-label">Nueva Contraseña</label>
                                <div class="input-group">
                                    <InputText type="@(showPassword ? "text" : "password")" class="form-control" @bind-Value="model.NewPassword" placeholder="Dejar en blanco para no cambiar" />
                                    <button type="button" class="btn btn-outline-secondary" @onclick="TogglePasswordVisibility">
                                        <i class="bi bi-@(showPassword ? "eye-slash" : "eye")"></i>
                                    </button>
                                    <button type="button" class="btn btn-outline-primary" @onclick="GeneratePassword">
                                        <i class="bi bi-key"></i>
                                    </button>
                                </div>
                                <ValidationMessage For="@(() => model.NewPassword)" class="text-danger small" />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Confirmar Nueva Contraseña</label>
                                <InputText type="@(showPassword ? "text" : "password")" class="form-control" @bind-Value="model.ConfirmNewPassword" placeholder="Confirmar nueva contraseña" />
                                <ValidationMessage For="@(() => model.ConfirmNewPassword)" class="text-danger small" />
                            </div>
                        </div>

                        <hr class="my-4" />

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary" disabled="@isSubmitting">
                                @if (isSubmitting)
                                {
                                    <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                }
                                else
                                {
                                    <i class="bi bi-check-lg me-2"></i>
                                }
                                Guardar Cambios
                            </button>
                            <a href="/users" class="btn btn-outline-secondary">Cancelar</a>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card border-0 shadow-sm mb-3">
                <div class="card-body">
                    <h5 class="card-title mb-3"><i class="bi bi-person-circle me-2"></i>Información del Usuario</h5>
                    <div class="small">
                        <p><strong>ID:</strong> @model.Id</p>
                        <p><strong>Estado:</strong> 
                            @if (model.IsActive)
                            {
                                <span class="badge bg-success">Activo</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Inactivo</span>
                            }
                        </p>
                        <p class="mb-0"><strong>Email Verificado:</strong> 
                            @if (model.EmailConfirmed)
                            {
                                <i class="bi bi-check-circle-fill text-success"></i>
                            }
                            else
                            {
                                <i class="bi bi-x-circle-fill text-danger"></i>
                            }
                        </p>
                    </div>
                </div>
            </div>

            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title mb-3"><i class="bi bi-info-circle me-2"></i>Ayuda</h5>
                    <div class="small">
                        <p><strong>Cambiar Contraseña:</strong> Solo ingrese una nueva contraseña si desea cambiarla. Si deja los campos en blanco, la contraseña actual se mantendrá.</p>
                        <p class="mb-0"><strong>Desactivar Usuario:</strong> Un usuario desactivado no podrá iniciar sesión hasta que sea reactivado.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public string UserId { get; set; } = string.Empty;
    
    private EditUserViewModel? model;
    private List<string> availableRoles = new();
    private bool isSubmitting = false;
    private bool showPassword = false;
    private string errorMessage = string.Empty;
    private bool successMessage = false;

    protected override async Task OnInitializedAsync()
    {
        availableRoles = await UserManagementService.GetAllRolesAsync();
        await LoadUser();
    }

    private async Task LoadUser()
    {
        var user = await UserManagementService.GetUserWithRolesAsync(UserId);
        if (user == null)
        {
            NavigationManager.NavigateTo("/users");
            return;
        }

        model = new EditUserViewModel
        {
            Id = user.Id,
            FullName = user.FullName,
            Email = user.Email,
            Department = user.Department,
            Role = user.PrimaryRole,
            EmailConfirmed = user.EmailConfirmed,
            IsActive = user.IsActive
        };
    }

    private async Task HandleSubmit()
    {
        if (model == null) return;

        isSubmitting = true;
        errorMessage = string.Empty;
        successMessage = false;

        try
        {
            var result = await UserManagementService.UpdateUserAsync(model);
            
            if (result.Success)
            {
                successMessage = true;
                await Task.Delay(1500);
                NavigationManager.NavigateTo("/users");
            }
            else
            {
                errorMessage = string.Join(", ", result.Errors);
            }
        }
        catch (Exception ex)
        {
            errorMessage = "Error al actualizar el usuario: " + ex.Message;
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private void TogglePasswordVisibility()
    {
        showPassword = !showPassword;
    }

    private void GeneratePassword()
    {
        if (model == null) return;

        const string chars = "ABCDEFGHJKLMNPQRSTUVWXYZabcdefghijkmnpqrstuvwxyz23456789!@#$%";
        var random = new Random();
        var password = new string(Enumerable.Repeat(chars, 12)
            .Select(s => s[random.Next(s.Length)]).ToArray());
        
        model.NewPassword = password;
        model.ConfirmNewPassword = password;
        showPassword = true;
    }
}
