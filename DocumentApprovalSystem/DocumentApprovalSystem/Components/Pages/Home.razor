@page "/"
@using DocumentApprovalSystem.Models
@using DocumentApprovalSystem.Services
@using DocumentApprovalSystem.Components.Shared
@inject IDocumentService DocumentService
@attribute [Authorize]
@rendermode InteractiveServer

<PageTitle>Panel Principal | Sistema de Aprobación</PageTitle>

<div class="row mb-4">
    <div class="col-12">
        <h2 class="fw-bold">Panel Principal</h2>
        <p class="text-secondary">Bienvenido al Sistema de Aprobación de Documentos</p>
    </div>
</div>

<!-- Stats Cards -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card stats-card">
            <div class="stats-icon bg-warning bg-opacity-10 text-warning">
                <i class="bi bi-hourglass-split"></i>
            </div>
            <div class="stats-info">
                <h3>@pendingCount</h3>
                <p>Pendientes</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card stats-card">
            <div class="stats-icon bg-success bg-opacity-10 text-success">
                <i class="bi bi-check-circle"></i>
            </div>
            <div class="stats-info">
                <h3>@approvedCount</h3>
                <p>Aprobados</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card stats-card">
            <div class="stats-icon bg-danger bg-opacity-10 text-danger">
                <i class="bi bi-x-circle"></i>
            </div>
            <div class="stats-info">
                <h3>@rejectedCount</h3>
                <p>Rechazados</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card stats-card">
            <div class="stats-icon bg-primary bg-opacity-10 text-primary">
                <i class="bi bi-files"></i>
            </div>
            <div class="stats-info">
                <h3>@totalCount</h3>
                <p>Total Documentos</p>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- Recent Documents -->
    <div class="col-md-8">
        <div class="card h-100">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span>Documentos Recientes</span>
                <a href="documents" class="btn btn-sm btn-outline-primary">Ver Todo</a>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th>Título</th>
                                <th>Solicitante</th>
                                <th>Fecha</th>
                                <th>Estado</th>
                                <th>Acción</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (recentDocuments == null)
                            {
                                <tr><td colspan="5" class="text-center py-4"><LoadingSpinner /></td></tr>
                            }
                            else if (!recentDocuments.Any())
                            {
                                <tr><td colspan="5" class="text-center py-4 text-muted">No hay documentos recientes.</td></tr>
                            }
                            else
                            {
                                @foreach (var doc in recentDocuments)
                                {
                                    <tr>
                                        <td class="fw-bold">@doc.Title</td>
                                        <td>@doc.RequestedByUser?.FullName</td>
                                        <td>@doc.CreatedDate.ToShortDateString()</td>
                                        <td>
                                            <span class="badge @GetStatusBadgeClass(doc.Status)">
                                                @GetStatusLabel(doc.Status)
                                            </span>
                                        </td>
                                        <td>
                                            <a href="documents/details/@doc.Id" class="btn btn-sm btn-light text-primary">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions / Chart Placeholder -->
    <div class="col-md-4">
        <div class="card mb-4">
            <div class="card-header">Acciones Rápidas</div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="documents/upload" class="btn btn-primary">
                        <i class="bi bi-cloud-upload me-2"></i> Nuevo Documento
                    </a>
                    <a href="documents" class="btn btn-outline-secondary">
                        <i class="bi bi-search me-2"></i> Buscar Documento
                    </a>
                </div>
            </div>
        </div>
        
        <div class="card">
            <div class="card-header">Resumen Semanal</div>
            <div class="card-body text-center py-5 text-muted">
                <i class="bi bi-bar-chart fs-1 mb-2 d-block"></i>
                <p>Gráfico de actividad próximamente</p>
            </div>
        </div>
    </div>
</div>

@code {
    private List<DocumentRequest>? recentDocuments;
    private int pendingCount;
    private int approvedCount;
    private int rejectedCount;
    private int totalCount;

    protected override async Task OnInitializedAsync()
    {
        var allDocs = await DocumentService.GetDocumentsAsync();
        
        totalCount = allDocs.Count;
        pendingCount = allDocs.Count(d => d.Status == "Pending");
        approvedCount = allDocs.Count(d => d.Status == "Approved");
        rejectedCount = allDocs.Count(d => d.Status == "Rejected");

        recentDocuments = allDocs.Take(5).ToList();
    }

    private string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Approved" => "badge-success",
            "Rejected" => "badge-danger",
            "Pending" => "badge-warning",
            _ => "badge-info"
        };
    }

    private string GetStatusLabel(string status)
    {
        return status switch
        {
            "Approved" => "Aprobado",
            "Rejected" => "Rechazado",
            "Pending" => "Pendiente",
            _ => status
        };
    }
}
